{
  "name": "terminal-paste-image-vscode",
  "displayName": "Terminal Paste Image",
  "description": "Paste clipboard images directly into terminal with automatic path insertion",
  "version": "0.0.1",
  "icon": "assets/icon.jpg",
  "author": {
    "name": "Feras Abdalrahman",
    "url": "https://marketplace.visualstudio.com/publishers/doonfrs"
  },
  "publisher": "doonfrs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/doonfrs/terminal-paste-image-vscode"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:terminal-paste-image.pasteImage"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terminal-paste-image.pasteImage",
        "title": "Paste Image to Terminal"
      }
    ],
    "keybindings": [
      {
        "command": "terminal-paste-image.pasteImage",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "terminalFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Terminal Paste Image",
      "properties": {
        "terminalPasteImage.folderName": {
          "type": "string",
          "default": ".cp-images",
          "description": "Name of the folder where pasted images will be saved"
        },
        "terminalPasteImage.autoGitIgnore": {
          "type": "boolean",
          "default": true,
          "description": "Automatically add the images folder to .gitignore if it's not already present"
        },
        "terminalPasteImage.maxImages": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum number of images to keep in the folder (older images will be automatically deleted)"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "clipboardy": "^3.0.0"
  }
}